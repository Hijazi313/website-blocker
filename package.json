{
  "name": "website-blocker",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "A powerful Chrome extension that helps you stay focused by blocking distracting websites. Built with React, TypeScript, and modern web technologies, it features a sleek UI, customizable block durations, and real-time URL capture for effortless site blocking.",
  "author": "Muhammad Hamza Asif",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "website-blocker",
    "productivity",
    "focus",
    "react",
    "typescript",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hijazi313/website-blocker.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && tsc -b && vite build",
    "clean": "rm -rf dist",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^8.57.0",
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
